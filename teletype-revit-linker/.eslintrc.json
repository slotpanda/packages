{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": ["error", "always"],
    "max-len": ["error", {"code": 79, "tabWidth": 2, "ignoreUrls": true}],
    "indent": ["error", 2],
    "require-await": "error"
  }
}
